# App
PORT=4291
OPENAI_API_KEY=open_ai_token
DEVELOPMENT_MODE=false # true - dont send replies to instagram

# Instagram
APP_SECRET=meta_dev_instagram_app_secret
TOKEN=self_created_token_enter_in_meta_dev_instagram_app
INSTAGRAM_RATE_LIMIT_REDIS_URL=redis://redis:6379/1  # shared limiter storage

# YouTube Data API (OAuth 2.0)
YOUTUBE_CLIENT_ID=google_oauth_client_id
YOUTUBE_CLIENT_SECRET=google_oauth_client_secret
YOUTUBE_API_KEY=google_api_key
YOUTUBE_RATE_LIMIT_REDIS_URL=redis://redis:6379/2  # shared limiter storage
YOUTUBE_REDIRECT_URI=https://your-domain.com/api/v1/auth/google/callback
# Optional: tuning for polling worker
YOUTUBE_POLL_INTERVAL_SECONDS=60

# Security / auth
OAUTH_ENCRYPTION_KEY=generate_with_openssl_rand_32
JWT_SECRET_KEY=generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Front
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4173,http://127.0.0.1:5173,http://127.0.0.1:4173
CORS_ALLOW_CREDENTIALS=true

# Telegram notifications
DISABLE_TELEGRAM_LOG_ALERTS=true # true - dont send comment notifications / app logs warning+
TG_TOKEN=tg_bot_token
TG_CHAT_ID=-tg_chat_id
TG_CHAT_ALERTS_THREAD_ID=alerts_thread_id
TG_CHAT_LOGS_THREAD_ID=logs_thread_id

# Docs
DOCS_USERNAME=login_api_swagger_docs
DOCS_PASSWORD=psswd_api_swagger_docs

# Database
POSTGRES_DB=instagram_db
POSTGRES_USER=postgres_user
POSTGRES_PASSWORD=postgres_password
POSTGRES_PORT=59731
DATABASE_URL="postgresql+asyncpg://postgres_user:postgres_password@postgres:5432/instagram_db"

# S3
AWS_ACCESS_KEY_ID=aws_access_key_id
AWS_SECRET_ACCESS_KEY=aws_secret_access_key
BUCKET_NAME=bucket_name
S3_URL="s3_url"

# Logs
LOGS_LEVEL=DEBUG
LOGS_LEVEL_POSTGRES=WARNING #DEBUG|INFO|NOTICE|WARNING|ERROR|LOG|FATAL|PANIC 
LOGS_LEVEL_CELERY=INFO
LOGS_LEVEL_REDIS=INFO
